<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .logo-container {
            flex-shrink: 0;
            margin-right: 35px;
            text-transform: uppercase;
            z-index: 2;
            pointer-events: none;
        }

            .logo-container .logo {
                display: inline-block;
                height: 80px;
                padding: 0;
                pointer-events: all;
            }

                .logo-container .logo img {
                    display: block;
                    max-width: 100%;
                    max-height: 100%;
                }

        .flag-border {
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 100%;
            height: 5px;
            z-index: -1;
            background-color: #3b3b3b;
        }

            .flag-border > div {
                -webkit-box-flex: 1;
                -ms-flex-positive: 1;
                flex-grow: 1;
            }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="logo-container" style="margin-bottom: -100px;">
                <a class="logo">
                    <img src="~/Content/image/logo.png" />
                </a>
            </div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Admin INEC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse" style="margin-left: 10%;">


                @if (Session["UserID"] != null)
                {<ul class="nav navbar-nav">
                        <li>@Html.ActionLink("List", "Index", "Admin")</li>
                        <li>@Html.ActionLink("Add Result", "Result", "Admin")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("Index", "Admin")"><span class="glyphicon glyphicon-user"></span> @Session["UserID"]</a></li>
                        <li><a href="@Url.Action("Logoff", "Account")"><span class="glyphicon glyphicon-user"></span> Logout </a></li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("Login", "Account")"><span class="glyphicon glyphicon-user"></span> Login</a></li>
                    </ul>
                }
            </div>
        </div>
        <div class="flag-border">
            <div style="background-color: #007fff !important;"></div>
            <div style="background-color: #f7d618 !important;"></div>
            <div style="background-color: #ce1021 !important;"></div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - INEC Application by <a href="http://www.artechconsulting.us" target="_blank">www.artechconsulting.us</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
