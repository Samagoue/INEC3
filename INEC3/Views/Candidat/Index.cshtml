@model IEnumerable<INEC3.Models.tbl_Candidat>

@{
    ViewBag.Title = "Index";
}

@Scripts.Render("~/bundles/jquery")
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Party.Sigle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ElectionType.Scrutin)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Party.Sigle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ElectionType.Scrutin)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID_Candidat }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID_Candidat }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID_Candidat })
        </td>
    </tr>
}

</table>
