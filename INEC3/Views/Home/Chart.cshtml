
@{
    ViewBag.Title = "Chart";
}


<style>
    .chart div {
        font: 10px sans-serif;
        background-color: steelblue;
        text-align: right;
        padding: 3px;
        margin: 1px;
        color: white;
    }
</style>
<h2>Chart</h2>
<div class="chart"></div>
<script src="~/Scripts/d3/d3.min.js"></script>



<script>

var data = [4, 8, 15, 16, 23, 42, 60];

var x = d3.scaleLinear()
    .domain([0, d3.max(data)])
    .range([0, 420]);

d3.select(".chart")
    .selectAll("div")
    .data(data)
    .enter().append("div")
    .transition()
    .duration(1500)
    .style("width", function(d) { return x(d) + "px"; })
    .text(function(d) { return d; });

</script>